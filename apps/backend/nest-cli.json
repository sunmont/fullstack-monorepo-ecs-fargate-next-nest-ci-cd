{
  "$schema": "json.schemastore.org",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "tsc",
    "typeCheck": true,
    "assets": [],
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true,
          "dtoFileNameSuffix": [".dto.ts", ".schema.ts"]
         }
      }
    ]
  }
}